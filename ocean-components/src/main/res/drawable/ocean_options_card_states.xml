<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false"
        android:drawable="@drawable/ocean_input_text_field_disabled"/>
    <item android:state_focused="true"
        android:drawable="@drawable/ocean_input_text_field_focused"/>
    <item android:state_hovered="true"
    android:drawable="@drawable/ocean_input_text_field_hover"/>
    <item  android:state_activated="true"
        android:drawable="@drawable/ocean_input_text_field_activated"/>
    <item android:state_activated="false"
        android:drawable="@drawable/ocean_input_text_field_inactive"/>
    <item android:drawable="@drawable/ocean_input_text_field_inactive"/>
</selector>