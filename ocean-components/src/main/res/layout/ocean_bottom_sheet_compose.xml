<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:behavior_hideable="true"
    app:behavior_peekHeight="100dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <data>

        <import type="android.view.View" />

        <import type="kotlin.jvm.functions.Function0" />

        <import type="kotlin.Unit" />

        <variable
            name="code"
            type="String" />

        <variable
            name="clickNegative"
            type="Function0&lt;Unit>" />

        <variable
            name="cancelabled"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ocean_bottom_sheet_background"
        android:orientation="vertical"
        android:paddingStart="@dimen/ocean_spacing_stack_xs"
        android:paddingEnd="@dimen/ocean_spacing_stack_xs"
        android:paddingBottom="@dimen/ocean_spacing_stack_sm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ocean_spacing_stack_xs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="13dp"
            android:onClick="@{() -> clickNegative.invoke()}"
            android:src="@drawable/icon_exit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/space"
            app:ocean_visible_or_gone="@{cancelabled}" />

        <Space
            android:id="@+id/space1"
            android:layout_width="0dp"
            android:layout_height="@dimen/ocean_spacing_stack_xxxs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/compose_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/space1"/>

        <LinearLayout
            android:id="@+id/container_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/compose_view"
            app:ocean_visible_or_gone="@{code.length() > 0}">

            <include
                layout="@layout/ocean_footer_bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:code="@{code}" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>