<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="br.com.useblu.oceands.model.OceanBasicChip" />

        <import type="br.com.useblu.oceands.model.OceanChipItemState" />

        <import type="br.com.useblu.oceands.model.OceanChipFilterOptions" />

        <variable
            name="item"
            type="br.com.useblu.oceands.model.OceanFilterChip" />
    </data>

    <LinearLayout
        android:id="@+id/chip_list_item_background"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:clickable="@{item.state != OceanChipItemState.DISABLED}"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:layout_marginEnd="@dimen/ocean_spacing_stack_xxs"
        tools:background="@drawable/ocean_chip_active">


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_family_base_bold"
            android:textSize="@dimen/ocean_font_size_xxs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelTextView"
            app:setFilterOptionsAdapter="@{item.filterOptions}" />

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_family_base_bold"
            android:gravity="center"
            android:text="@{item.label}"
            android:textAlignment="center"
            android:textSize="@dimen/ocean_font_size_xxs"
            tools:text="Todos"
            tools:textColor="@color/ocean_color_interface_light_up" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="@dimen/ocean_spacing_inline_xxxs"
            android:layout_gravity="center"
            app:ocean_icon="@{item.isOpen ? `chevronupsolid` : `chevrondownsolid`}"
            tools:src="@drawable/ocean_icon_chevron_down_solid"
            tools:tint="@color/ocean_color_interface_light_up" />
    </LinearLayout>
</layout>
