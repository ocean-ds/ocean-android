<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="kotlin.Unit" />

        <import type="java.util.List" />

        <import type="androidx.recyclerview.widget.LinearLayoutManager" />

        <import type="br.com.useblu.oceands.model.OceanShortcutItem" />

        <variable
            name="entries"
            type="List&lt;OceanShortcutItem>" />

        <variable
            name="columns"
            type="Integer" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/ocean_spacing_inline_xs"
                android:paddingEnd="@dimen/ocean_spacing_inline_xs"
                app:columns="@{columns}"
                app:entries="@{entries}"
                tools:itemCount="5"
                tools:listitem="@layout/item_shortcuts_adapter_ocean" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>