<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="text"
            type="String" />

        <variable
            name="gravity"
            type="Integer" />

        <variable
            name="color"
            type="Integer" />

    </data>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textOceanParagraphInverse"
        style="@style/Ocean.Paragraph.Inverse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="@{gravity}"
        android:text="@{text}"
        app:ocean_text_from_html="@{text}"
        android:textColor="@{(color != null) ? color : @color/ocean_color_interface_light_down}"
        tools:text="Paragraph Inverse" />

</layout>
