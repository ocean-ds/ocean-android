<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="text"
            type="String" />

        <variable
            name="gravity"
            type="Integer" />
        
        <variable
            name="highlighted"
            type="Boolean" />

    </data>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textOceanSubtitle1"
        style="@style/Ocean.Subtitle.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="@{gravity}"
        android:text="@{text}"
        android:textColor="@{highlighted ? @color/ocean_color_brand_primary_pure : @color/ocean_color_interface_dark_down}"
        tools:text="Subtitle 1" />

</layout>