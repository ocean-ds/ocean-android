<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="kotlin.jvm.functions.Function0" />

        <import type="kotlin.jvm.functions.Function1" />

        <import type="kotlin.Unit" />

        <import type="br.com.useblu.oceands.core.OceanTagType" />

        <variable
            name="title"
            type="String" />

        <variable
            name="formatTypeTitle"
            type="br.com.useblu.oceands.core.Formatter" />

        <variable
            name="subtitle"
            type="String" />

        <variable
            name="formatTypeSubTitle"
            type="br.com.useblu.oceands.core.Formatter" />

        <variable
            name="description"
            type="String" />

        <variable
            name="linkText"
            type="String" />

        <variable
            name="itemId"
            type="String" />

        <variable
            name="formatTypeDescription"
            type="br.com.useblu.oceands.core.Formatter" />

        <variable
            name="badgeTitle"
            type="String" />

        <variable
            name="badgeVisible"
            type="Boolean" />

        <variable
            name="icon"
            type="android.graphics.drawable.Drawable" />

        <variable
            name="click"
            type="Function0&lt;Unit>" />

        <variable
            name="longClick"
            type="Function0&lt;Unit>" />

        <variable
            name="clickLink"
            type="Function1&lt;String, Unit>" />

        <variable
            name="arrowVisible"
            type="Boolean" />

        <variable
            name="isSingleLine"
            type="Boolean" />

        <variable
            name="withHorizontalPadding"
            type="Boolean" />

        <variable
            name="tagTitle"
            type="String" />

        <variable
            name="tagType"
            type="OceanTagType" />

        <variable
            name="tagHideIcon"
            type="Boolean" />

        <variable
            name="withClickEffect"
            type="Boolean" />

        <variable
            name="disabled"
            type="Boolean" />

        <variable
            name="imageUrl"
            type="String" />

        <variable
            name="placeHolder"
            type="android.graphics.drawable.Drawable" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:enabled="true"
        android:focusable="true"
        android:onClick="@{() -> click.invoke()}"
        android:paddingTop="12dp"
        android:paddingBottom="@dimen/ocean_spacing_stack_xs"
        app:clickable_effect="@{withClickEffect}"
        app:onLongClickPressed="@{longClick}">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Space
                android:id="@+id/paddingStart"
                android:layout_width="@dimen/ocean_spacing_stack_xs"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:ocean_visible_or_gone="@{withHorizontalPadding != null}" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:imageUrl="@{imageUrl}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
                app:layout_constraintStart_toEndOf="@id/paddingStart"
                app:layout_constraintTop_toTopOf="parent"
                app:ocean_visible_or_gone="@{imageUrl != null &amp;&amp; icon == null}"
                app:placeHolder="@{placeHolder}"
                tools:src="@drawable/icon_generic_primary" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@{icon}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
                app:layout_constraintStart_toEndOf="@id/paddingStart"
                app:layout_constraintTop_toTopOf="parent"
                app:ocean_visible_or_gone="@{icon != null &amp;&amp; imageUrl == null }"
                tools:src="@drawable/icon_generic_primary"
                tools:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ocean_spacing_stack_xs"
            android:layout_marginEnd="@dimen/ocean_spacing_stack_xs"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout1"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
            app:layout_constraintStart_toEndOf="@+id/linearLayout1"
            app:layout_constraintTop_toTopOf="@+id/linearLayout1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/include10"
                        style="@style/Ocean.Paragraph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_family_base_medium"
                        android:text="@{title}"
                        android:textColor="@color/ocean_color_interface_dark_deep"
                        app:ocean_text="@{title}"
                        app:ocean_text_format="@{formatTypeTitle}"
                        app:ocean_visible_or_gone="@{!isSingleLine}"
                        tools:text="Title" />

                    <TextView
                        android:id="@+id/textTitle"
                        style="@style/Ocean.Paragraph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/font_family_base_medium"
                        android:maxLines="1"
                        android:text="@{title}"
                        android:textColor="@color/ocean_color_interface_dark_deep"
                        app:ocean_text="@{title}"
                        app:ocean_text_format="@{formatTypeTitle}"
                        app:ocean_visible_or_gone="@{isSingleLine}"
                        tools:text="Title" />
                </FrameLayout>

                <Space
                    android:layout_width="@dimen/ocean_spacing_stack_xxs"
                    android:layout_height="match_parent" />

                <include
                    android:id="@+id/include6"
                    layout="@layout/ocean_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:text="@{badgeTitle}"
                    app:visible="@{badgeVisible}"
                    tools:layout_editor_absoluteX="76dp"
                    tools:layout_editor_absoluteY="16dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/include4"
                style="@style/Ocean.Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{subtitle}"
                app:ocean_text="@{subtitle}"
                app:ocean_text_format="@{formatTypeSubTitle}"
                app:ocean_visible_or_gone="@{subtitle != null}"
                tools:text="Subtitle" />

            <TextView
                android:id="@+id/include20"
                style="@style/Ocean.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{description}"
                app:ocean_text="@{description}"
                app:ocean_text_format="@{formatTypeDescription}"
                app:ocean_visible_or_gone="@{description != null}"
                tools:text="Description" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_layout_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ocean_spacing_stack_xxxs"
                app:ocean_visible_or_gone="@{tagTitle != null}">

                <include
                    layout="@layout/ocean_tag"
                    app:hideIcon="@{tagHideIcon}"
                    app:title="@{tagTitle}"
                    app:type="@{tagType != null ? tagType : OceanTagType.Warning}" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/ocean_spacing_stack_xs"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{() -> clickLink.invoke(itemId)}"
                android:text="@{linkText}"
                android:textColor="@color/ocean_color_brand_primary_pure"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView9"
                app:layout_constraintStart_toEndOf="@id/linearLayout2"
                app:layout_constraintTop_toTopOf="parent"
                app:ocean_visible_or_gone="@{linkText != null}"
                tools:text="Link" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/paddingEnd"
                app:layout_constraintTop_toTopOf="parent"
                app:ocean_visible_or_gone="@{arrowVisible &amp;&amp; !disabled}"
                app:srcCompat="@drawable/icon_chevron_right" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/paddingEnd"
                app:layout_constraintTop_toTopOf="parent"
                app:ocean_visible_or_gone="@{arrowVisible &amp;&amp; disabled}"
                app:srcCompat="@drawable/icon_lock" />

            <Space
                android:id="@+id/paddingEnd"
                android:layout_width="@dimen/ocean_spacing_stack_xs"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:ocean_visible_or_gone="@{withHorizontalPadding != null}" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
