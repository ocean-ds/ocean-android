<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="kotlin.jvm.functions.Function0" />

        <import type="android.view.View" />

        <import type="kotlin.Unit" />

        <import type="br.com.useblu.oceands.utils.FormatTypes" />

        <import type="br.com.useblu.oceands.model.OceanBalanceBluModel" />

        <variable
            name="model"
            type="OceanBalanceBluModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ocean_blu_plus_background"
            tools:ignore="UselessParent">

            <com.github.florent37.expansionpanel.ExpansionHeader
                android:id="@+id/expansion_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expansion_headerIndicator="@id/header_indicator"
                app:expansion_layout="@id/expansion_layout"
                app:expansion_toggleOnClick="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/container_expansion_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{() -> model.onClickHideIcon.invoke()}"
                        android:src="@{model.isContentHidden ? @drawable/icon_eye_off : @drawable/icon_eye_on}"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/text_view_header_label"
                        app:layout_constraintBottom_toBottomOf="@id/text_view_header_value"
                        tools:src="@drawable/icon_eye_on" />

                    <TextView
                        android:id="@+id/text_view_header_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_family_base_bold"
                        android:text="@{model.firstLabel}"
                        android:textColor="@color/ocean_color_brand_primary_up"
                        android:textSize="@dimen/ocean_font_size_xxxs"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintStart_toEndOf="@+id/icon"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="First label" />

                    <TextView
                        android:id="@+id/text_view_header_value"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:fontFamily="@font/font_family_base_bold"
                        android:textColor="@color/ocean_color_interface_light_pure"
                        android:textSize="@dimen/ocean_font_size_sm"
                        app:layout_constraintStart_toStartOf="@+id/text_view_header_label"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_header_label"
                        app:ocean_text="@{model.firstValue}"
                        app:ocean_text_format="@{model.isContentHidden ? FormatTypes.FORMAT_VALUE_WITH_SYMBOL_HIDDEN : FormatTypes.FORMAT_VALUE_WITH_SYMBOL}"
                        app:change_color="@{false}"
                        tools:text="First value" />

                    <ImageView
                        android:id="@+id/header_indicator"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/text_view_header_label"
                        app:layout_constraintBottom_toBottomOf="@id/text_view_header_value"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/icon_chevron_right_solid"
                        app:tint="@color/ocean_color_interface_light_pure"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.github.florent37.expansionpanel.ExpansionHeader>

            <com.github.florent37.expansionpanel.ExpansionLayout
                android:id="@+id/expansion_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:expansion_expanded="true"
                android:layout_marginBottom="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/expansion_layout_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/ocean_spacing_stack_xs">

                    <TextView
                        android:id="@+id/text_view_first_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="12dp"
                        android:fontFamily="@font/font_family_base_bold"
                        android:text="@{model.secondLabel}"
                        android:textColor="@color/ocean_color_interface_light_pure"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Second Label" />

                    <TextView
                        android:id="@+id/text_view_first_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/ocean_spacing_stack_xs"
                        android:fontFamily="@font/font_family_base_bold"
                        android:textColor="@color/ocean_color_interface_light_pure"
                        app:layout_constraintBottom_toBottomOf="@id/text_view_first_label"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintStart_toEndOf="@id/text_view_first_label"
                        app:layout_constraintTop_toTopOf="@id/text_view_first_label"
                        app:ocean_text="@{model.secondValue}"
                        app:ocean_text_format="@{model.isContentHidden ? FormatTypes.FORMAT_VALUE_WITH_SYMBOL_HIDDEN : FormatTypes.FORMAT_VALUE_WITH_SYMBOL}"
                        app:change_color="@{false}"
                        tools:text="Second value" />

                    <View
                        android:id="@+id/divider1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/ocean_color_interface_light_down"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_view_first_label" />

                    <TextView
                        android:id="@+id/text_view_second_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/font_family_base_medium"
                        android:text="@{model.thirdLabel}"
                        android:textColor="@color/ocean_color_interface_light_pure"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider1"
                        tools:text="Third label" />

                    <TextView
                        android:id="@+id/text_view_second_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_family_base_medium"
                        android:textColor="@color/ocean_color_interface_light_pure"
                        app:layout_constraintBottom_toBottomOf="@id/text_view_second_label"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintStart_toEndOf="@id/text_view_second_label"
                        app:layout_constraintTop_toTopOf="@id/text_view_second_label"
                        app:ocean_text="@{model.thirdValue}"
                        app:ocean_text_format="@{model.isContentHidden ? FormatTypes.FORMAT_VALUE_WITH_SYMBOL_HIDDEN : FormatTypes.FORMAT_VALUE_WITH_SYMBOL}"
                        app:change_color="@{false}"
                        tools:text="Third value" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.github.florent37.expansionpanel.ExpansionLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:paddingBottom="12dp"
                android:paddingTop="4dp">

                <include
                    android:id="@+id/container_divider"
                    layout="@layout/ocean_divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_family_base_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/button_extract"
                    android:text="@{model.buttonDescription}"
                    android:layout_marginEnd="16dp"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/container_divider"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/ocean_color_interface_light_pure"
                    tools:text="Confira tudo o que entrou e saiu da sua Conta Digital Blu"/>

                <include
                    android:id="@+id/button_extract"
                    layout="@layout/ocean_button_secondary_sm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/container_divider"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:text="@{model.buttonCta}" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>
</layout>