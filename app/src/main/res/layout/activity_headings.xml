<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.headings.HeadingsActivity">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:paddingVertical="@dimen/ocean_spacing_inline_xs">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/ocean_spacing_inline_xs">

                <include
                    layout="@layout/ocean_heading_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ocean_spacing_inline_xs"
                    app:color="@{@color/ocean_color_status_negative_pure}"
                    android:text="@{@string/ocean_sample_text_heading_1}" />

                <include
                    layout="@layout/ocean_heading_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ocean_spacing_inline_xs"
                    android:text="@{@string/ocean_sample_text_heading_1}" />

                <include
                    layout="@layout/ocean_heading_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ocean_spacing_inline_xs"
                    android:text="@{@string/ocean_sample_text_heading_1}" />

                <include
                    layout="@layout/ocean_heading_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ocean_spacing_inline_xs"
                    android:text="@{@string/ocean_sample_text_heading_1}" />

                <include
                    layout="@layout/ocean_heading_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ocean_spacing_inline_xs"
                    android:text="@{@string/ocean_sample_text_heading_1}" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ocean_color_brand_primary_pure"
                android:orientation="vertical"
                android:padding="@dimen/ocean_spacing_inline_xs">

                <include
                    layout="@layout/ocean_heading_1_inverse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ocean_spacing_inline_xs"
                    android:text="@{@string/ocean_sample_text_heading_1}" />

                <include
                    layout="@layout/ocean_heading_2_inverse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ocean_spacing_inline_xs"
                    android:text="@{@string/ocean_sample_text_heading_1}" />

                <include
                    layout="@layout/ocean_heading_3_inverse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ocean_spacing_inline_xs"
                    android:text="@{@string/ocean_sample_text_heading_1}" />

                <include
                    layout="@layout/ocean_heading_4_inverse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ocean_spacing_inline_xs"
                    android:text="@{@string/ocean_sample_text_heading_1}" />

                <include
                    layout="@layout/ocean_heading_5_inverse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ocean_spacing_inline_xs"
                    android:text="@{@string/ocean_sample_text_heading_1}" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>
</layout>
