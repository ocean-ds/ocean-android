<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="android.view.ViewGroup" />

        <import type="br.com.useblu.oceands.client.R" />

        <variable
            name="viewmodel"
            type="br.com.useblu.oceands.client.ui.parentchildtextlist.ParentChildTextListViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.buttons.ButtonsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/ocean_spacing_stack_xs"
            android:paddingBottom="@dimen/ocean_spacing_stack_xs">

            <include
                layout="@layout/ocean_parent_child_text_list"
                app:item="@{viewmodel.parent}"
                app:clickSubItem="@{viewmodel::click}"
                app:clickEditButton="@{viewmodel::clickEditButton}"
                app:clickDeleteButton="@{viewmodel::clickDeleteButton}"
                app:longClick="@{viewmodel::longClick}" />

        </LinearLayout>
    </ScrollView>
</layout>