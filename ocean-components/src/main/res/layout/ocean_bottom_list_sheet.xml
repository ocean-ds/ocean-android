<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:behavior_hideable="true"
    app:behavior_peekHeight="100dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <data>

        <import type="kotlin.jvm.functions.Function0" />

        <import type="java.util.List" />

        <import type="androidx.lifecycle.MutableLiveData" />

        <variable
            name="title"
            type="String" />

        <variable
            name="cancelabled"
            type="Boolean" />

        <variable
            name="showFooterButton"
            type="Boolean" />

        <variable
            name="loading"
            type="Boolean" />

    </data>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ocean_bottom_sheet_background"
        android:orientation="vertical"
        android:paddingStart="@dimen/ocean_spacing_stack_xxxs"
        android:paddingEnd="@dimen/ocean_spacing_stack_xxxs"
        android:paddingBottom="@dimen/ocean_spacing_stack_xs">

        <Space
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ocean_spacing_stack_md" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_handle"
            app:ocean_visible_or_gone="@{cancelabled}" />

        <Space
            android:id="@+id/space2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ocean_spacing_stack_md" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textTitle"
            style="@style/Ocean.Heading.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/ocean_spacing_stack_xs"
            android:paddingEnd="@dimen/ocean_spacing_stack_xs"
            android:text="@{title}"
            tools:text="Heading 3" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/ocean_spacing_stack_xs" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/ocean_spacing_stack_xxxs"
            android:paddingEnd="@dimen/ocean_spacing_stack_xxxs"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/textTitle"
            tools:paddingStart="@dimen/ocean_spacing_stack_xs"
            tools:listitem="@layout/ocean_bottom_list_sheet_item"
            tools:itemCount="4"/>

        <LinearLayout
            android:id="@+id/botton_sheet_list_button_div_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:ocean_visible_or_gone="@{showFooterButton == true}">

            <include layout="@layout/ocean_divider"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/ocean_spacing_stack_xs" />

            <LinearLayout
                android:id="@+id/botton_sheet_list_button_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/ocean_spacing_stack_xs">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ocean_spacing_stack_xxs" />

                <include
                    android:id="@+id/bottom_sheet_list_button"
                    layout="@layout/ocean_button_secondary_md"
                    app:showProgress="@{loading.booleanValue()}"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</layout>
