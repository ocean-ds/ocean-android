<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:behavior_hideable="true"
    app:behavior_peekHeight="100dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <data>

        <import type="kotlin.jvm.functions.Function0" />

        <import type="kotlin.Unit" />

        <import type="android.view.Gravity" />

        <import type="androidx.lifecycle.LiveData" />

        <import type="android.graphics.drawable.Drawable" />

        <variable
            name="title"
            type="String" />

        <variable
            name="cancelabled"
            type="Boolean" />

        <variable
            name="showFooterButton"
            type="Boolean" />

        <variable
            name="loading"
            type="LiveData&lt;Boolean>" />

        <variable
            name="caption"
            type="String" />

        <variable
            name="bodyIcon"
            type="Drawable" />

        <variable
            name="dismiss"
            type="Function0&lt;Unit>" />

    </data>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ocean_bottom_sheet_background"
        android:orientation="vertical"
        android:paddingBottom="@dimen/ocean_spacing_stack_xs">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="13dp"
            android:layout_gravity="right"
            android:onClick="@{() -> dismiss.invoke()}"
            android:layout_marginTop="@dimen/ocean_spacing_stack_xs"
            android:layout_marginEnd="@dimen/ocean_spacing_stack_xs"
            android:src="@drawable/icon_exit"
            app:ocean_visible_or_gone="@{cancelabled}" />

        <Space
            android:id="@+id/space4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ocean_spacing_stack_sm"
            app:ocean_visible_or_gone="@{bodyIcon != null}" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@{bodyIcon}"
            tools:src="@drawable/icon_generic" />

        <Space
            android:id="@+id/space2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ocean_spacing_stack_sm"
            app:ocean_visible_or_gone="@{bodyIcon != null &amp;&amp; title != null }"/>

        <TextView
            android:id="@+id/textTitle"
            style="@style/Ocean.Heading.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="@dimen/ocean_spacing_stack_xs"
            android:paddingEnd="@dimen/ocean_spacing_stack_xs"
            android:text="@{title}"
            android:textColor="@color/ocean_color_interface_dark_deep"
            app:ocean_visible_or_gone="@{title != null}"
            tools:text="Heading 3" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/ocean_spacing_stack_xs"
            app:ocean_visible_or_gone="@{title != null}"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/textTitle"
            tools:itemCount="4"
            tools:listitem="@layout/ocean_bottom_list_sheet_item"
            tools:paddingStart="@dimen/ocean_spacing_stack_xxxs" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/font_family_base_medium"
            android:text="@{caption}"
            android:gravity="center"
            android:textColor="@color/ocean_color_interface_dark_down"
            app:ocean_visible_or_gone="@{caption != null}"
            tools:text="Lembre-se de salvar o documento em um local onde consiga encontrar com facilidade." />

        <LinearLayout
            android:id="@+id/botton_sheet_list_button_div_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:ocean_visible_or_gone="@{showFooterButton}">

            <include layout="@layout/ocean_divider" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/ocean_spacing_stack_xxs" />

            <include
                android:id="@+id/bottom_sheet_list_button_secondary"
                layout="@layout/ocean_button_secondary_md"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:visibility="gone"
                app:showProgress="@{loading}" />

            <include
                android:id="@+id/bottom_sheet_list_button_primary"
                layout="@layout/ocean_button_primary_md"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:showProgress="@{loading}" />
        </LinearLayout>
    </LinearLayout>
</layout>
