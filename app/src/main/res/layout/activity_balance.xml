<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.InputType" />

        <variable
            name="viewmodel"
            type="br.com.useblu.oceands.client.ui.balance.BalanceViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/ocean_spacing_inline_xs"
        android:paddingBottom="@dimen/ocean_spacing_inline_xs"
        tools:context=".ui.shortcuts.ShortcutsActivity">

        <include
            layout="@layout/ocean_balance"
            app:isContentHidden="@{viewmodel.contentIsHidden}"
            app:clickIcon="@{viewmodel::clickIconContentVisibility}"
            app:headerTitle="@{`header`}"
            app:firstLabel="@{`Label 1`}"
            app:firstValue="@{`Value 1`}"
            app:secondLabel="@{`Label 2`}"
            app:secondValue="@{`Value 2`}"
            app:thirdLabel="@{`Label 3`}"
            app:thirdValue="@{`Value 3`}"
            app:fourthLabel="@{`Label 4`}"
            app:fourthValue="@{`Value 4`}"/>

    </LinearLayout>
</layout>