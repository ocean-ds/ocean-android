                app:icon='@{viewmodel.isIconEnabled() ? @drawable/icon_plus_blue_16dp : null}'
                app:ocean_layout_width="@{viewmodel.isWidthStateBlocked() ? ViewGroup.LayoutParams.MATCH_PARENT : ViewGroup.LayoutParams.WRAP_CONTENT }" />

            <include
