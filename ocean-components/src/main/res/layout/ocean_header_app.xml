<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="br.com.useblu.oceands.model.OceanBadgeType" />

        <import type="br.com.useblu.oceands.model.OceanHeaderAppModel" />

        <variable
            name="model"
            type="OceanHeaderAppModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ocean_color_brand_primary_pure"
        android:paddingBottom="28dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_title_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="8dp"
            android:paddingStart="16dp"
            android:onClick="@{() -> model.onClickTitle.invoke()}"
            app:layout_constraintEnd_toStartOf="@id/blu_plus_view_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_family_highlight_bold"
                android:text="@{model.clientName}"
                android:textColor="@color/ocean_color_interface_light_pure"
                android:textSize="@dimen/ocean_font_size_xs"
                app:layout_constraintBottom_toTopOf="@+id/store_identification_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Fcr ColchÃµes" />

            <ImageView
                android:id="@+id/image_view_arrow_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="@dimen/ocean_spacing_inline_xs"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingTop="@dimen/ocean_spacing_stack_xxxs"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar_title"
                app:layout_constraintStart_toEndOf="@+id/toolbar_title"
                app:layout_constraintTop_toTopOf="@+id/toolbar_title"
                android:src="@drawable/icon_chevron_down_solid"
                app:tint="@color/ocean_color_interface_light_pure"
                tools:tint="@color/ocean_color_interface_light_pure" />

            <TextView
                android:id="@+id/store_identification_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ocean_spacing_stack_xxxs"
                android:layout_marginBottom="@dimen/ocean_spacing_stack_xxxs"
                android:fontFamily="@font/font_family_base_regular"
                android:text="@{model.formattedCnpj}"
                android:textColor="@color/ocean_color_interface_light_pure"
                android:textSize="@dimen/ocean_font_size_xxxs"
                app:ocean_visible_or_gone="@{model.formattedCnpj != null &amp; !model.formattedCnpj.isEmpty()}"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_title"
                app:layout_constraintStart_toStartOf="@+id/toolbar_title"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="32.677.554/0001-14" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/blu_plus_view_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ocean_spacing_stack_xs"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/header_title_container"
            app:layout_constraintEnd_toStartOf="@+id/constraint_layout_first_action">

            <include
                layout="@layout/ocean_blu_plus"
                app:value="@{model.bluPlusValue}"
                app:click="@{model.onClickBluPlus}" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_first_action"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="@dimen/ocean_spacing_stack_xxxs"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> model.onClickMenu.invoke()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:id="@+id/frame_layout_badge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image_view_first_action"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    app:tint="@color/ocean_color_interface_light_pure"
                    android:src="@drawable/ocean_icon_menu_outline"
                    tools:tint="@color/ocean_color_interface_light_pure" />

                <LinearLayout
                    android:id="@+id/linear_layout_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ocean_spacing_stack_xxs"
                    android:layout_marginEnd="@dimen/ocean_spacing_stack_xxs"
                    android:layout_marginBottom="@dimen/ocean_spacing_stack_sm"
                    android:layout_marginStart="@dimen/ocean_spacing_stack_sm"
                    android:layout_gravity="end|top"
                    android:orientation="horizontal">

                    <include
                        layout="@layout/ocean_badge"
                        app:isSmall="@{true}"
                        app:text="@{String.valueOf(model.badgeCount)}"
                        app:type="@{OceanBadgeType.WARNING}"
                        app:visible="@{model.badgeCount > 0}" />

                </LinearLayout>

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            layout="@layout/ocean_balance_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/header_title_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:model="@{model.balanceModel}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
