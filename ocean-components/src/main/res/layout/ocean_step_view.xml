<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="androidx.lifecycle.MutableLiveData" />
        <import type="br.com.useblu.oceands.OceanStepView" />

        <variable
            name="amountSteps"
            type="Integer" />

        <variable
            name="currentStep"
            type="Integer" />

        <variable
            name="withAnimation"
            type="Boolean" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <br.com.useblu.oceands.OceanStepView
            android:id="@+id/stepView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:totalAmountSteps="@{amountSteps}"
            app:sv_textSize="0dp"
            app:sv_steps="@null"
            app:sv_stepPadding="0dp"
            app:sv_textPadding="0dp"
            app:currentStep="@{currentStep}"
            app:withAnimation="@{withAnimation}"
            app:sv_typeface="@font/font_family_base_bold"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
